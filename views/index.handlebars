<div class = "main_heading">
<h1>Things to be mindful of</h1>
</div>
<div class = "secondary_heading">
<h2>Good thoughts to be sent</h2>
</div>
<div class="list_container">
<ul>
  {{#each wishes}}
    {{#unless made}}
      {{> wishes/wish-block made=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
<div class = "tertiary_heading">
<h2>Good thoughts sent</h2>
</div>
<div class="list_container">
<ul>
  {{#each wishes}}
    {{#if made}}
      {{> wishes/wish-block made=false}}
    {{/if}}
  {{/each}}
</ul>
</div>
<div class = "fourth_heading">
<h2>Add a wish</h2>
</div>
<div class = "wish_container">
<form class="create-form">

  <div class="form-group">
    <label for="wish">A wish to remember:</label>
    <input type="text" id="wish" name="name">
  </div>

  <div class="form-group">
    <label for="make">mindful</label><br>
    <input type="radio" name="made" value="0" checked> yes<br>
    <input type="radio" name="made" value="1"> not yet
  </div>
</form>
</div>

<div class="button_container">
  <button class = "button" type="submit">Add wish</button>
  </div>
